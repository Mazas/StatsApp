<Window x:Class="WpfApp1.WindowList.AccountList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.WindowList"
        mc:Ignorable="d"
        Title="Account List" Height="300" Width="646.875">
    <Grid>
        <ListView x:Name="ListView" GridViewColumnHeader.Click="GridViewColumnHeaderClickedHandler" Margin="0,0,0,41.973">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Border HorizontalAlignment="Right">
            <Button Content="OK" HorizontalAlignment="Left" Margin="0,0,10,10" Click="Button_Click" VerticalAlignment="Bottom" Width="75"/>
        </Border>
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="AddButton" Width="75"/>
    </Grid>
</Window>
